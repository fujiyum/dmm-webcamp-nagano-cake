<div class="container mt-3">
  <div class="row mx-auto title">
   <div class="col">
     <%= form_with model:@order local:true do |f| %>
     <div class="payment">
       <h4>支払方法</div>
        <%= f.radio_button :payment, Order.payments.key(0) %>
        <%= f.label :payment, Order.payments_i18n[:credit_card] %>
        <br>
        <%= f.radio_button :payment, Order.payments.key(1) %>
        <%= f.label :payment, Order.payments_i18n[:bank] %>
     <div>
     <div class="address">
       <h4>お届け先</h4>
         <%= f.radio_button :address_id, "current_customer.address" %>
         <%= f.label :address_id, "ご自身の住所" %>
         <%= current_customer.postal_cade %>
         <%= current_customer.address %>
         <%= current_customer.name %>

       　<%= f.radio_button :address_id, "address" %>
       　<%= f.select :address_id, options_form_collection_for_select(Address.all, :id, :full_address) %>
     
         <%= f.radio_button :address_id, %>
         <%= f.text_field :postal_cade %>
         <%= f.text_field :address %>
         <%= f.text_field :name %>
     </div>
     <% end %>
   </div>
  </div>
</div>