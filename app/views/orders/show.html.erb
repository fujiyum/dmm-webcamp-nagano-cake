<div class="container mt-3">
  <div class="row mx-auto">
    <div class="col pull-left">
     <h4>注文情報</h4>
    </div>
  </div>
  <div class="row">
   <div class="col">
    <table class="table table-bordered">
      <tbody>
         <tr>
           <th>注文日</th><td><%= l @order.created_at %></td>
         </tr>
         <tr>
           <th>配送先</th><td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
         </tr>
         <tr>
            <th>支払方法</th><td><%= @order.payment_i18n %>
         </tr>
         <tr>
            <th>ステータス</th><td></td>
         </tr>
      </tbody>
    </table>
   </div>
   <div class="col">
     <h4>請求情報</h4>
     <table class="table table-bordered">
       <tbody>
         <tr>
           <th>商品合計</th><td><%= @order.total_price.to_s(:delimited) %></td>
         </tr>
         <tr>
           <th>配送料</th><td><%= @order.postage_method %></td>
         </tr>
         <tr>
           <th><strong>ご請求額</strong></th><td><%= (@order.total_price.to_i + @order.postage_method.to_i).to_s(:delimited) %></td>
         </tr>
       </tbody>
     </table>
   </div>
  </div>
  <div class="row">
    <div class="col">
      <h4>注文内容</h4>
      <table class="table table=bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |detail| %>
          <tr>
            <td><%= detail.item.name %></td>
            <td><%= detail.tax_included_price.to_s(:delimited) %></td>
            <td><%= detail.quantity %></td>
            <td><%= (detail.tax_included_price*detail.quantity).to_s(:delimited) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
