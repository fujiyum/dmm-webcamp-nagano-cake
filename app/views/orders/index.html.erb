<div class="container mt-3">
  <div class="row mx-auto">
    <div class="col pull-left">
     <h4>注文履歴一覧</h4>
    </div>
  </div>
  <div class="row mx-auto">
   <div class="col">
    <table class="table table-hove mt-3">
      <thead class="table-warning bg-opacity-10">
       <tr>
         <th>注文日</th>
         <th>配送先</th>
         <th>注文商品</th>
         <th nowrap>支払金額</th>
         <th nowrap>ステータス</th>
         <th nowrap>注文詳細</th>
       </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
         <tr>
          <td><%= l order.created_at %></td>
          <td nowrap><%= order.address %></td>
          <td nowrap>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= (order.total_price.to_i).to_s(:delimited) %></td>
          <td></td>
          <td nowrap><%= link_to '表示する', order_path(order.id), class:'btn btn-info' %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
   </div>
  </div>
</div>