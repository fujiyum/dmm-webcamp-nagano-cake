<div class="container mt-3">
  <div class="row">
    <div class="col pull-left">
      <h4>商品一覧</h4>
    </div>

    <div class="col pull-right text-right mr-5">
      <%= link_to new_admin_item_path do %>
      <h2 class="fas fa-plus-circle"></h2>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-hove">
        <thead class="table-warning bg-opacity-10">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.is_active_i18n %></td>
          </tr>
          <% end %>
        </tboby>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>