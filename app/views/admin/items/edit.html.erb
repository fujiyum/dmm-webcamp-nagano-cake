<h2>商品編集</h2>
<%= form_with model:@item, url:admin_item_path(@item.id), local:true do |f| %>
<p>商品画像</p>
<%= f.attachment_field :image %>
<p>商品名</p>
<%= f.text_field :name %>
<p>商品説明</p>
<%= f.text_area :introduction %>
<p>ジャンル</p>
<%= f.collection_select :genre_id, Genre.all, :id, :name %>
<p>税抜価格</p>
<%= f.text_field :price %>円
<p>販売ステータス</p>
<label><%= f.radio_button :is_active, true %>販売中</label>
<label><%= f.radio_button :is_active, false %>販売停止中</label>

<%= f.submit '変更を保存' %>
<% end %>