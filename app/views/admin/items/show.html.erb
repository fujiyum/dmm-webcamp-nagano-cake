<div class="container mt-3">
  <div class="row">
    <h4>商品詳細</h4>
  </div>
  <div class="row">
   <div class="col-lg-2 mt-3">
    <%= attachment_image_tag @item, :image, :fill, 150, 150, format:'jpg' %>
   </div>
   <div class="col-lg-10">
     <table class="table table-borderless">
      <tbody>
       <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
          <th>税込価格</th>
          <td><%= @item.with_tax_price.to_s(:dalimited) %> (<%= @item.price.to_s(:dalimited) %>)　円</td>
        </tr>
        <tr>
         <th>販売ステータス</th>
         <td><%= @item.is_active %></td>
     </table>
   </div>
　　　<div class="d-grid gap-2 col-6 mx-auto">
       <%= link_to '編集する', edit_admin_item_path(@item.id), class:'btn btn-success' %>
      </div>
 </div>
</div>