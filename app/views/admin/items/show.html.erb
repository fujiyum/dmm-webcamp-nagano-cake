<div class="container mt-3">
 <div class="row">
   <div class="mx-auto">
    <%= attachment_image_tag @item, :image %>
     <table class="table table-borderless">
      <thead>
       <tr>
        <th></th>
        <th></th>
       </tr>
      </thead>
      <tbody>
       <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
          <th>税込価格</th>
          <td><%= @item.with_tax_price.to_s(:dalimited) %>(<%= @item.price %>)　円</td>
        </tr>
        <tr>
         <th>販売ステータス</th>
         <td><%= @item.is_active %></td>

     </table>
　　　<div class="d-grid gap-2 col-6 mx-auto">
       <%= link_to '編集する', edit_admin_item_path(@item.id), class:'btn btn-success' %>
      </div>
   </div>
 </div>
</div>