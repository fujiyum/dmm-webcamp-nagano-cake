<% if @genre.errors.any? %>
  <%= @genre.errors.count %>
  <%= @genre.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="container mt-3">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">
   <h4>ジャンル一覧・追加<h4>
    <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
      <table class="table table-borderless">
        <thead>
         <tr>
          <th><i class="far fa-arrow-alt-circle-down"></i> ジャンル名 入力</th>
         </tr>
        </thead>
        <tbody>
         <tr>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '新規登録', class:'btn btn-success' %></td>
         </tr>
        </tbody>
      </table>
    <% end %>

    <table class="table">
     <thead>
      <tr class="table-warning bg-opacity-10">
         <th>ジャンル</th>
         <th></th>
      </tr>
     </thead>
      <tbody>
       <% @genres.each do |genre| %>
       <tr>
         <td><%= genre.name %></td>
         <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class:'btn btn-success' %></td>
       </tr>
       <% end %>
      </tboby>
    </table>
  </div>
 </div>
</div>