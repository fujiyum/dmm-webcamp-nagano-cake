<div class="container">
 <div class="row">
  <div class="col">
  <h2>ジャンル一覧・追加<h2>
   <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>

   <p>ジャンル</p>
    <%= f.text_field :name %>
    <%= f.submit '新規登録' %>

    <% end %>
  </div>
  <div class="col">
    <table>
     <thead>
      <tr>
         <th>ジャンル</th>
         <th></th>
      </tr>
     </thead>
      <tbody>
       <% @genres.each do |genre| %>
       <tr>
         <td><%= genre.name %></td>
         <td><%= link_to '編集する', edit_admin_genre_path(genre.id) %></td>
       </tr>
       <% end %>
      </tboby>
    </table>
  </div>
 </div>
</div>