<div class="container mt-3">
 <div class="row">
  <div class="pull-left"><h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">注文履歴一覧</h4></div>
   <table class="table table-hove">
     <thead class="table-warning bg-opacity-10">
       <tr>
         <th>購入日時</th>
         <th>購入者</th>
         <th>注文個数</th>
         <th>注文ステータス</th>
       </tr>
     </thead>
     <tbody>
      <% @orders.each do |order| %>
       <tr>
         <td>
           <%= link_to admin_order_path(order.id) do %>
           <%= l order.created_at %>
           <% end %>
         </td>
         <td><%= order.customer.full_name %></td>
         <td><%= order.order_details.sum(:quantity) %></td>
         <td><%= order.status_i18n %></td>
       </tr>
      <% end %>
     </tboby>
   </table>
 </div>
</div>