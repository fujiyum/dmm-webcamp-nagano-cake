<div class="container mt-3">
  <div class="row">
    <h4><%= @customer.full_name %>さんの会員詳細</h4>
    <% @customer.each do |customer| %>
     <p>会員ID<%= customer.id %></p>
     <p>氏名<%= customer.full_name %></p>
     <p>フリガナ<%= customer.full_name_kana%></p>
     <p>郵便番号<%= customer.postale_code %></p>
     <p>住所<%= customer.address %></p>
     <p>電話番号<%= customer.telephone_number %></p>
     <p>メールアドレス<%= customer.email %></p>
     <p>会員ステータス<%= customer.is_active %></p>
    <% end %>
  </div>
</div>
