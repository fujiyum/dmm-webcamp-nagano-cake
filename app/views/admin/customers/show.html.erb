<div class="container mt-3">
 <div class="row">
   <div class="mx-auto">
    <h4><%= @customer.full_name %>さんの会員詳細</h4>
      <table class="table table-borderless">
       <thead>
        <tr>
         <th></th>
         <th></th>
        </tr>
       </thead>
       <tbody>
        <tr>
           <th>会員ID</th>
           <td><%= @customer.id %>></td>
         </tr>
           <th>氏名</th>
           <td><%= @customer.full_name %></td>
         </tr>
           <th>フリガナ</th>
           <td><%= @customer.full_name_kana %></td>
         </tr>
           <th>郵便番号</th>
           <td><%= @customer.postale_code %></td>
         </tr>
         <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
         </tr>
         <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
         </tr>
         <th>メールアドレス</th>
          <td><%= @customer.email %></td>
         </tr>
         <th>会員ステータス</th>
          <td><%= @customer.is_active %></td>
         </tr>
      </table>
　　　<div class="d-grid gap-2 col-6 mx-auto">
       <%= link_to '編集する', edit_admin_customer_path(@customer.id), class:'btn btn-success' %>
      </div>
   </div>
 </div>
</div>