<div class="container mt-3">
 <div class="row">
   <div class="mx-auto">
    <h4 class="mb-5">商品一覧</h4>
    <% @items.each do |item| %>
     <div class="col mx-auto">
         <div>
           <%= link_to item_path(item.id) do %>
           <%= attachment_image_tag item, :image %>
           <% end %>
         </div>
         <div><%= item.name %></div>
         <div><%= item.price %></div>
     </div>
    <% end %>
   </div>
 </div>
</div>