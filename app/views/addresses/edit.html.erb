<div class="container mt-5">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">
   <h4 class="page-title">配送先編集</h4>
   <%= form_with model: @address, local:true do |f| %>
    <div class="form-group">
     <div class="input-group align-items-center">
      <label>郵便番号(ハイフンなし)</label>
       <%= f.text_field :postal_code, class:'form-control ml-3' %>
     </div>
    </div>
    <div class="form-group">
     <div class="input-group align-items-center">
      <label>住所</label>
       <%= f.text_field :address, class:'form-control ml-3' %>
     </div>
    </div>
    <div class="form-group">
     <div class="input-group align-items-center">
      <label>宛名</label>
       <%= f.text_field :name, class:'form-control ml-3' %>
     </div>
    </div>
    <div class="text-center">
      <%= f.submit '変更を登録保存', class:'btn btn-success' %>
    </div>
   <% end %>
  </div>
 </div>
</div>