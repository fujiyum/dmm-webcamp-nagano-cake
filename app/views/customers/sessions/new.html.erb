<div class="container mt-3">
 <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 mx-auto text-center">

    <h2>ログイン</h2>
　　　<p>会員の方はこちらからログイン</p>
    <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
      <div class="field mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder:"メールアドレス" %>
     </div>

      <div class="field mb-3">
      <%= f.password_field :password, autocomplete: "current-password", class:'form-control', placeholder:"パスワード" %>
     </div>

     <% if devise_mapping.rememberable? %>
       <div class="field mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
     <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class:'btn btn-info btn-block' %>
    </div>
  <% end %>

  <%= render "customers/shared/links" %>
  </div>
 </div>
</div>